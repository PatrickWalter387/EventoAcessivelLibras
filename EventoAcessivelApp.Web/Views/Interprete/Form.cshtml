@model EventoAcessivelApp.Domain.Models.Interprete

@{
    ViewData["Title"] = "Cadastro de Intérprete";
}
<h1 style="color: #005b91;">@ViewData["Title"]</h1>

<form asp-action="Form" method="post" enctype="multipart/form-data">
    <div class="form-group" style="padding: 10px">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Informe o nome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group" style="padding: 10px">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="nome@provedor.com" />
    </div>

    <div class="form-group" style="padding: 10px">
        <label asp-for="Idade"></label>
        <input asp-for="Idade" class="form-control" placeholder="Em anos" />
    </div>

    <div class="form-group" style="padding: 10px">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control"/>
    </div>

    <div class="form-group" style="padding: 10px">
        <label asp-for="Cidade"></label>
        <input asp-for="Cidade" class="form-control"/>
    </div>

    <div class="form-group" style="padding: 10px">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control"/>
    </div>

    @* IMPLEMENTAR ESSES CAMPOS DESCRIÇÃO E FORMA DE PAGAMENTO *@
    <div class="form-group" style="padding: 10px">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" placeholder="Descriçao experiencia de trabalho"/> 
    </div>

    @*<div class="form-group" style="padding: 10px">
        <label asp-for="Formas de pagamento aceitas"></label>
        <input asp-for="Formas de pagamento" class="form-control"/>
    </div>*@

    <div class="form-group" style="padding: 10px">
        <label asp-for="Foto"></label>
        <input asp-for="Foto"  type="file" class="btn btn-primary" style="background-color:#005b91;border-radius:50px;"/>
    </div>

     <div class="form-group" style="padding: 10px">
        <label asp-for="CurriculoFile"></label>
        <input asp-for="CurriculoFile" type="file" class="btn btn-primary" style="background-color:#005b91;border-radius:50px;"/>
    </div>

    <div style="padding: 10px">
        <input type="submit" value="Salvar" class="btn btn-primary" style="background-color:#005b91;border-radius:50px;"/>
    </div>
</form>

